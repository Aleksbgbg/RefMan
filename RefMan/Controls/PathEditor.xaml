<UserControl x:Class="RefMan.Controls.PathEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008">
    <DockPanel>
        <Button DockPanel.Dock="Right" Content="Browse..." Width="75"
                Margin="5, 0, 0, 0" Click="Browse_Click"/>

        <TextBlock Text="{Binding Value, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}"/>
    </DockPanel>
</UserControl>